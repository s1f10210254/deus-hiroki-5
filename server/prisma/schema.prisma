datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  name           String?
  riddlesCreated Riddle[] @relation("createdBy")
  riddleGuesses  Guess[]  @relation("guessedBy")
}

model Riddle {
  id        String   @id @default(uuid())
  title     String
  question  String
  answer    String
  createdAt DateTime @default(now())
  createdBy User     @relation(name: "createdBy", fields: [creatorId], references: [id])
  creatorId String
  guesses   Guess[]  @relation("riddleGuesses")
}

model Guess {
  id        String   @id @default(uuid())
  riddleId  String
  userId    String
  guess     String
  isCorrect Boolean
  createdAt DateTime @default(now())
  riddle    Riddle   @relation(name: "riddleGuesses", fields: [riddleId], references: [id])
  user      User     @relation(name: "guessedBy", fields: [userId], references: [id])
}
